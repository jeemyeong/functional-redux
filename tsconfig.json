{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "lib": ["es2018", "dom"]
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/**/*",
    "*.test.ts"
  ]
}
